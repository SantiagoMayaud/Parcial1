@model Parcial1SM.Models.ModelKit

@{
    ViewData["Title"] = "Create";
}

<h1>Agregar Nueva Maqueta</h1>

<h4>Datos de la Maqueta:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    <option value="0">Avion Militar</option>
                    <option value="1">Avion Comercial</option>
                    <option value="2">Helicoptero</option>
                    <option value="3">Tanque</option>
                    <option value="4">Naval</option>
                    <option value="5">Auto</option>
                    <option value="6">Otros</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModelMaker" class="control-label"></label>
                <input asp-for="ModelMaker" class="form-control" />
                <span asp-validation-for="ModelMaker" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pieces" class="control-label"></label>
                <input asp-for="Pieces" class="form-control" />
                <span asp-validation-for="Pieces" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Finished" /> @Html.DisplayNameFor(model => model.Finished)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
