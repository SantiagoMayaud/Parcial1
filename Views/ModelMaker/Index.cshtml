@using Parcial1SM.ViewModels;
@model ModelMakerViewModel;

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Fabricantes</h1>

<p>
    <a asp-action="Create">Crear nuevo fabricante</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ModelMakers[0].BrandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelMakers[0].Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ModelMakers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BrandName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
